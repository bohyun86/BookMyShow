<mapper namespace="com.itwillbs.mapper.MusicalMapper">

 
 
  <!-- 뮤지컬 승인 상태 업데이트 -->
    <update id="updateMusicalApproval" >
        UPDATE musical
        SET approved = #{approved}
        WHERE title = #{title}
    </update>
   

